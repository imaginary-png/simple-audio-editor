<Window x:Class="simple_audio_editor_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:simple_audio_editor_GUI.ViewModels"
        mc:Ignorable="d"
        Title="Simple Audio Editor" Height="500" Width="800"
        FontSize="16">
    <!--SizeToContent="WidthAndHeight"-->
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>


    <Grid>
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5.5*"/>
                <RowDefinition Height="2.5*"></RowDefinition>
            </Grid.RowDefinitions>
            <TabControl Grid.Column="0" Grid.Row="0" Background="GhostWhite">
                <TabItem Header="General" >
                    <StackPanel>
                        <Border BorderBrush="Silver" 
                            Background="GhostWhite"
                            BorderThickness="2"
                            Height="auto" 
                            Margin="15 15 15 2.5 "
                            Width="auto"
                            CornerRadius="8 8 1 1">
                            <!-- Settings Section -->
                            <StackPanel Margin="5 5 5 5">

                                <StackPanel Orientation="Horizontal" Background="Aqua"
                                            Margin="0 0 0 6">

                                    <Label Content="Input "
                                           Margin="20 0 0 0"
                                           Padding="0" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>

                                    <TextBox 
                                    IsReadOnly="True" 
                                    BorderThickness="1"
                                    Margin="10 0 10 0"
                                    Width="550"
                                    FontSize="16"
                                    Text="{Binding Input}" />

                                    <Button 
                                        Width="65"
                                        Height="20"
                                        FontSize="12"
                                        Content="Select File"
                                        Command="{Binding OpenFileButtonClicked}"/>

                                </StackPanel>
                                <TextBox 
                                    IsReadOnly="True"
                                    BorderThickness="1"
                                    Margin="100 2 100 4"
                                    Text="{Binding Output}" />
                                <TextBox 
                                    IsReadOnly="True"
                                    Background="Transparent"
                                    BorderThickness="0"

                                    Margin="2 2 2 4"    
                                    Text="TRIM SELECTOR GOES HERE...(Start, end)" />

                                <TextBox 
                                    BorderThickness="1"
                                    HorizontalAlignment="Left"
                                    TextAlignment="Center"
                                    Width="50"
                                    Margin="2 2 2 6"
                                    Text="{Binding Volume}" />

                                <TextBox 
                                BorderThickness="1"
                                HorizontalAlignment="Left"
                                TextAlignment="Center"
                                Width="50"
                                Margin="2 2 2 2"
                                Text="{Binding BitRate}" />

                                <Label Content="MAYBE AUDIO PLAYER goes here..." />
                            </StackPanel>
                        </Border>

                        <Border BorderBrush="Silver" 
                                Background="GhostWhite"
                                BorderThickness="2"
                                Height="auto" 
                                Margin="15 2.5 15 15 "
                                Width="auto"
                                CornerRadius="1 1 8 8">
                            <!-- Trim List -->
                            <ListView Background="Transparent" BorderThickness="0">
                                LIST OF TRIM SECTION
                                <Label>FILLER</Label>
                            </ListView>
                        </Border>

                            <Button 
                                Command="{Binding AddButtonPressed}"
                                CommandParameter="{Binding Volume}"
                                HorizontalAlignment="Right"
                                Margin="0 0 15 0"
                                Width="75" 
                                Height="20">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4 4 4 4"/>
                                    </Style>
                                </Button.Resources>
                                Add
                        </Button>

                    </StackPanel>
                </TabItem>
                <TabItem Header="+" />
            </TabControl>
            <!-- Job Queue -->
            <DataGrid Grid.Column="0" Grid.Row="1" HeadersVisibility="Column">
            </DataGrid>
            <Button Grid.Column="0" Grid.Row="1"
                    Width="75"
                    Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 18 20"
                    Content="Start Jobs">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="2 2 2 2"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
